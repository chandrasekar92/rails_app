<div class="row">
  <div class="col-md-6">
    <div class="card-box">
      <%= form_with(model: @article, local: true) do |form| %>

        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@article.errors.count, "erros") %> is in the articles form
            </h2>

            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label for="article_title">Title</label>
          <%= form.text_field :title, class: "form-control", placeholder: 'Enter title' %>
        </div>
        <div class="form-group">
          <label for="article_text">Text</label>
          <%= form.text_area :text, class: "form-control", placeholder: 'Enter comment' %>
        </div>
        <%= form.submit %>
      <% end %>
    </div>
  </div>
</div>